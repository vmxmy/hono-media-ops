{
  "$schema": "./catalog-schema.json",
  "id": "standard",
  "name": "A2UI Standard Catalog",
  "version": "0.9.0",
  "description": "Standard A2UI component catalog with layout, content, interactive, and feedback components",
  "components": {
    "column": {
      "description": "Vertical flex container",
      "category": "layout",
      "supportsChildren": true,
      "properties": {
        "gap": {
          "type": "string",
          "description": "Gap between children",
          "default": "0.5rem"
        }
      }
    },
    "row": {
      "description": "Horizontal flex container",
      "category": "layout",
      "supportsChildren": true,
      "properties": {
        "gap": {
          "type": "string",
          "description": "Gap between children",
          "default": "0.5rem"
        },
        "align": {
          "type": "string",
          "enum": ["start", "center", "end", "stretch"],
          "description": "Align items vertically"
        },
        "justify": {
          "type": "string",
          "enum": ["start", "center", "end", "between", "around"],
          "description": "Justify content horizontally"
        },
        "wrap": {
          "type": "boolean",
          "description": "Enable flex wrap"
        },
        "responsive": {
          "type": "boolean",
          "description": "Enable responsive behavior (stack on mobile)"
        }
      }
    },
    "container": {
      "description": "Generic container",
      "category": "layout",
      "supportsChildren": true,
      "properties": {}
    },
    "card": {
      "description": "Card container with optional click action",
      "category": "layout",
      "supportsChildren": true,
      "properties": {
        "hoverable": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover effect"
        },
        "onClick": {
          "type": "action",
          "description": "Click action handler"
        }
      }
    },
    "text": {
      "description": "Text display with variants",
      "category": "content",
      "properties": {
        "text": {
          "type": "string",
          "required": true,
          "description": "Text content to display"
        },
        "variant": {
          "type": "string",
          "enum": ["h1", "h2", "h3", "h4", "body", "caption", "label"],
          "default": "body",
          "description": "Text style variant"
        },
        "color": {
          "type": "string",
          "enum": ["foreground", "muted", "primary", "destructive", "success"],
          "default": "foreground",
          "description": "Text color"
        },
        "weight": {
          "type": "string",
          "enum": ["normal", "medium", "semibold", "bold"],
          "description": "Font weight"
        }
      }
    },
    "image": {
      "description": "Image display",
      "category": "content",
      "properties": {
        "src": {
          "type": "string",
          "required": true,
          "description": "Image source URL"
        },
        "alt": {
          "type": "string",
          "description": "Alternative text"
        },
        "width": {
          "type": "string",
          "description": "Image width"
        },
        "height": {
          "type": "string",
          "description": "Image height"
        }
      }
    },
    "icon": {
      "description": "Icon display",
      "category": "content",
      "properties": {
        "name": {
          "type": "string",
          "required": true,
          "description": "Icon name or emoji"
        },
        "size": {
          "type": "number",
          "default": 16,
          "description": "Icon size in pixels"
        },
        "color": {
          "type": "string",
          "description": "Icon color"
        }
      }
    },
    "divider": {
      "description": "Visual separator",
      "category": "content",
      "properties": {
        "orientation": {
          "type": "string",
          "enum": ["horizontal", "vertical"],
          "default": "horizontal",
          "description": "Divider orientation"
        }
      }
    },
    "button": {
      "description": "Clickable button",
      "category": "interactive",
      "properties": {
        "text": {
          "type": "string",
          "required": true,
          "description": "Button label"
        },
        "variant": {
          "type": "string",
          "enum": ["primary", "secondary", "destructive", "ghost", "text", "outline"],
          "default": "primary",
          "description": "Button style variant"
        },
        "size": {
          "type": "string",
          "enum": ["sm", "md", "lg"],
          "default": "md",
          "description": "Button size"
        },
        "disabled": {
          "type": "boolean",
          "default": false,
          "description": "Disable the button"
        },
        "icon": {
          "type": "string",
          "enum": ["google", "github"],
          "description": "Icon to display before text"
        },
        "fullWidth": {
          "type": "boolean",
          "default": false,
          "description": "Make button full width"
        },
        "onClick": {
          "type": "action",
          "description": "Click action handler"
        }
      }
    },
    "input": {
      "description": "Text input field",
      "category": "interactive",
      "properties": {
        "value": {
          "type": "string",
          "description": "Input value"
        },
        "placeholder": {
          "type": "string",
          "description": "Placeholder text"
        },
        "inputType": {
          "type": "string",
          "enum": ["text", "password", "email", "number"],
          "default": "text",
          "description": "Input type"
        },
        "onChange": {
          "type": "action",
          "description": "Change action handler"
        }
      }
    },
    "editable-text": {
      "description": "Click-to-edit text field that toggles between display and edit mode",
      "category": "interactive",
      "properties": {
        "value": {
          "type": "string",
          "required": true,
          "description": "Text value to display and edit"
        },
        "placeholder": {
          "type": "string",
          "description": "Placeholder text when value is empty"
        },
        "variant": {
          "type": "string",
          "enum": ["h1", "h2", "h3", "h4", "body", "caption"],
          "default": "body",
          "description": "Text style variant"
        },
        "multiline": {
          "type": "boolean",
          "default": false,
          "description": "Use textarea for multi-line editing"
        },
        "editable": {
          "type": "boolean",
          "default": true,
          "description": "Whether the text can be edited"
        },
        "onChange": {
          "type": "action",
          "description": "Called when text is saved with new value as first arg"
        }
      }
    },
    "textarea": {
      "description": "Multi-line text input",
      "category": "interactive",
      "properties": {
        "value": {
          "type": "string",
          "description": "Textarea value"
        },
        "placeholder": {
          "type": "string",
          "description": "Placeholder text"
        },
        "rows": {
          "type": "number",
          "default": 4,
          "description": "Number of visible rows"
        },
        "onChange": {
          "type": "action",
          "description": "Change action handler"
        }
      }
    },
    "select": {
      "description": "Dropdown selection",
      "category": "interactive",
      "properties": {
        "value": {
          "type": "string",
          "description": "Selected value"
        },
        "options": {
          "type": "array",
          "required": true,
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "value": { "type": "string" }
            }
          },
          "description": "Available options"
        },
        "onChange": {
          "type": "action",
          "description": "Change action handler"
        }
      }
    },
    "checkbox": {
      "description": "Checkbox input",
      "category": "interactive",
      "properties": {
        "checked": {
          "type": "boolean",
          "default": false,
          "description": "Checked state"
        },
        "taskId": {
          "type": "string",
          "description": "Associated task ID"
        },
        "onChange": {
          "type": "action",
          "description": "Change action handler"
        }
      }
    },
    "tabs": {
      "description": "Tabbed content container",
      "category": "interactive",
      "properties": {
        "tabs": {
          "type": "array",
          "required": true,
          "items": {
            "type": "object",
            "properties": {
              "label": { "type": "string" },
              "content": { "type": "node" }
            }
          },
          "description": "Tab definitions"
        },
        "defaultTab": {
          "type": "number",
          "default": 0,
          "description": "Default active tab index"
        }
      }
    },
    "badge": {
      "description": "Status badge",
      "category": "feedback",
      "properties": {
        "text": {
          "type": "string",
          "required": true,
          "description": "Badge text"
        },
        "color": {
          "type": "string",
          "enum": ["default", "primary", "success", "warning", "destructive", "info", "pending", "processing", "completed", "failed", "cancelled"],
          "default": "default",
          "description": "Badge color"
        }
      }
    },
    "progress": {
      "description": "Progress indicator",
      "category": "feedback",
      "properties": {
        "status": {
          "type": "string",
          "required": true,
          "enum": ["pending", "processing", "completed", "failed", "cancelled"],
          "description": "Progress status"
        },
        "value": {
          "type": "number",
          "description": "Progress value (0-100)"
        }
      }
    },
    "modal": {
      "description": "Modal dialog",
      "category": "feedback",
      "supportsChildren": true,
      "properties": {
        "title": {
          "type": "string",
          "description": "Modal title"
        },
        "open": {
          "type": "boolean",
          "default": false,
          "description": "Open state"
        },
        "onClose": {
          "type": "action",
          "description": "Close action handler"
        }
      }
    },
    "page": {
      "description": "Page container with optional header",
      "category": "layout",
      "supportsChildren": true,
      "properties": {
        "title": {
          "type": "string",
          "description": "Page title"
        },
        "maxWidth": {
          "type": "string",
          "enum": ["sm", "md", "lg", "xl", "2xl", "full"],
          "default": "xl",
          "description": "Maximum content width"
        },
        "centered": {
          "type": "boolean",
          "default": false,
          "description": "Center content vertically and horizontally"
        }
      }
    },
    "nav": {
      "description": "Navigation bar",
      "category": "layout",
      "supportsChildren": true,
      "properties": {
        "brand": {
          "type": "string",
          "description": "Brand/logo text"
        }
      }
    },
    "nav-link": {
      "description": "Navigation link",
      "category": "layout",
      "properties": {
        "text": {
          "type": "string",
          "required": true,
          "description": "Link text"
        },
        "href": {
          "type": "string",
          "description": "Link URL"
        },
        "active": {
          "type": "boolean",
          "default": false,
          "description": "Active state"
        },
        "onClick": {
          "type": "action",
          "description": "Click action handler"
        }
      }
    },
    "form": {
      "description": "Form container with submit handling",
      "category": "interactive",
      "supportsChildren": true,
      "properties": {
        "onSubmit": {
          "type": "action",
          "description": "Submit action handler"
        }
      }
    },
    "form-field": {
      "description": "Form field with label",
      "category": "interactive",
      "supportsChildren": true,
      "properties": {
        "label": {
          "type": "string",
          "required": true,
          "description": "Field label"
        },
        "required": {
          "type": "boolean",
          "default": false,
          "description": "Required field indicator"
        },
        "error": {
          "type": "string",
          "description": "Error message"
        }
      }
    },
    "alert": {
      "description": "Alert message",
      "category": "feedback",
      "properties": {
        "message": {
          "type": "string",
          "required": true,
          "description": "Alert message"
        },
        "variant": {
          "type": "string",
          "enum": ["info", "success", "warning", "error"],
          "default": "info",
          "description": "Alert variant"
        }
      }
    },
    "link": {
      "description": "Clickable link",
      "category": "content",
      "properties": {
        "text": {
          "type": "string",
          "required": true,
          "description": "Link text"
        },
        "href": {
          "type": "string",
          "description": "Link URL"
        },
        "variant": {
          "type": "string",
          "enum": ["default", "muted", "primary"],
          "default": "primary",
          "description": "Link style"
        },
        "onClick": {
          "type": "action",
          "description": "Click action handler"
        }
      }
    },
    "spacer": {
      "description": "Flexible spacer",
      "category": "layout",
      "properties": {
        "size": {
          "type": "string",
          "description": "Fixed size (e.g., '1rem', '20px')"
        },
        "flex": {
          "type": "boolean",
          "default": true,
          "description": "Use flex grow"
        }
      }
    },
    "collapsible": {
      "description": "Collapsible content section with expand/collapse toggle. Shows summary when collapsed, full children when expanded.",
      "category": "interactive",
      "supportsChildren": true,
      "properties": {
        "title": {
          "type": "string",
          "required": true,
          "description": "Header title text"
        },
        "subtitle": {
          "type": "string",
          "description": "Optional subtitle text shown in header"
        },
        "summary": {
          "type": "string",
          "description": "Summary text shown when collapsed (always visible)"
        },
        "previewChildren": {
          "type": "array",
          "items": { "type": "node" },
          "description": "Children nodes always visible (shown when collapsed and expanded)"
        },
        "defaultOpen": {
          "type": "boolean",
          "default": false,
          "description": "Initial open state"
        },
        "badges": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "text": { "type": "string" },
              "color": { "type": "string" }
            }
          },
          "description": "Optional badges to display in header"
        }
      }
    },
    "chart-pie": {
      "description": "Pie/Donut chart for distribution data visualization",
      "category": "chart",
      "properties": {
        "data": {
          "type": "array",
          "required": true,
          "description": "Chart data array with id, label, and value"
        },
        "innerRadius": {
          "type": "number",
          "default": 0.5,
          "description": "Inner radius for donut effect (0-1)"
        },
        "height": {
          "type": "number",
          "default": 300,
          "description": "Chart height in pixels"
        },
        "title": {
          "type": "string",
          "description": "Chart title"
        },
        "colors": {
          "type": "array",
          "description": "Custom color scheme"
        }
      }
    },
    "chart-radar": {
      "description": "Radar chart for multi-dimensional comparison",
      "category": "chart",
      "properties": {
        "data": {
          "type": "array",
          "required": true,
          "description": "Radar data array"
        },
        "keys": {
          "type": "array",
          "required": true,
          "description": "Data keys to plot"
        },
        "indexBy": {
          "type": "string",
          "required": true,
          "description": "Index field name"
        },
        "height": {
          "type": "number",
          "default": 300,
          "description": "Chart height in pixels"
        },
        "title": {
          "type": "string",
          "description": "Chart title"
        },
        "maxValue": {
          "type": "number",
          "description": "Maximum scale value"
        }
      }
    },
    "chart-line": {
      "description": "Line/Area chart for time series data",
      "category": "chart",
      "properties": {
        "data": {
          "type": "array",
          "required": true,
          "description": "Series data with id and data points"
        },
        "height": {
          "type": "number",
          "default": 300,
          "description": "Chart height in pixels"
        },
        "title": {
          "type": "string",
          "description": "Chart title"
        },
        "enableArea": {
          "type": "boolean",
          "default": false,
          "description": "Fill area under line"
        },
        "curve": {
          "type": "string",
          "enum": ["linear", "cardinal", "catmullRom", "monotoneX", "natural", "step"],
          "default": "catmullRom",
          "description": "Line curve type"
        },
        "enablePoints": {
          "type": "boolean",
          "default": true,
          "description": "Show data points"
        },
        "xLegend": {
          "type": "string",
          "description": "X axis legend"
        },
        "yLegend": {
          "type": "string",
          "description": "Y axis legend"
        }
      }
    },
    "chart-bar": {
      "description": "Bar chart for comparison data",
      "category": "chart",
      "properties": {
        "data": {
          "type": "array",
          "required": true,
          "description": "Bar data array"
        },
        "keys": {
          "type": "array",
          "required": true,
          "description": "Data keys to display"
        },
        "indexBy": {
          "type": "string",
          "required": true,
          "description": "Index field name"
        },
        "layout": {
          "type": "string",
          "enum": ["horizontal", "vertical"],
          "default": "vertical",
          "description": "Bar orientation"
        },
        "height": {
          "type": "number",
          "default": 300,
          "description": "Chart height in pixels"
        },
        "title": {
          "type": "string",
          "description": "Chart title"
        },
        "groupMode": {
          "type": "string",
          "enum": ["grouped", "stacked"],
          "default": "grouped",
          "description": "How to group multiple keys"
        }
      }
    },
    "chart-radial-bar": {
      "description": "Radial bar / gauge chart for metrics display",
      "category": "chart",
      "properties": {
        "data": {
          "type": "array",
          "required": true,
          "description": "Radial data with id and data points"
        },
        "maxValue": {
          "type": "number",
          "default": 100,
          "description": "Maximum value for scale"
        },
        "height": {
          "type": "number",
          "default": 200,
          "description": "Chart height in pixels"
        },
        "title": {
          "type": "string",
          "description": "Chart title"
        },
        "startAngle": {
          "type": "number",
          "default": 0,
          "description": "Start angle in degrees"
        },
        "endAngle": {
          "type": "number",
          "default": 360,
          "description": "End angle in degrees"
        }
      }
    },
    "chart-word-cloud": {
      "description": "Word cloud for keyword visualization",
      "category": "chart",
      "properties": {
        "words": {
          "type": "array",
          "required": true,
          "description": "Words array with text and value"
        },
        "height": {
          "type": "number",
          "default": 200,
          "description": "Chart height in pixels"
        },
        "title": {
          "type": "string",
          "description": "Chart title"
        },
        "colors": {
          "type": "array",
          "description": "Custom color scheme"
        }
      }
    },
    "app-shell": {
      "description": "Application shell layout with sidebar navigation and header",
      "category": "custom",
      "supportsChildren": true,
      "properties": {
        "brand": {
          "type": "string",
          "description": "Brand text"
        },
        "logoSrc": {
          "type": "string",
          "description": "Logo image source"
        },
        "logoAlt": {
          "type": "string",
          "description": "Logo image alt"
        },
        "navItems": {
          "type": "array",
          "required": true,
          "items": {
            "type": "object",
            "properties": {
              "key": { "type": "string" },
              "label": { "type": "string" },
              "path": { "type": "string" }
            }
          },
          "description": "Sidebar navigation items"
        },
        "activePath": {
          "type": "string",
          "description": "Active pathname for highlighting"
        },
        "onNavigate": {
          "type": "action",
          "description": "Navigate action"
        },
        "onLogout": {
          "type": "action",
          "description": "Logout action"
        },
        "logoutLabel": {
          "type": "string",
          "description": "Logout button text"
        },
        "headerActions": {
          "type": "array",
          "items": { "type": "node" },
          "description": "Optional header action nodes"
        }
      }
    },
    "theme-switcher": {
      "description": "Theme and locale switcher",
      "category": "custom",
      "properties": {}
    },
    "materials-table": {
      "description": "Materials table for style analyses",
      "category": "custom",
      "properties": {
        "data": {
          "type": "array",
          "required": true,
          "description": "Table row data"
        },
        "onClone": {
          "type": "action",
          "description": "Clone action"
        },
        "onDelete": {
          "type": "action",
          "description": "Delete action"
        },
        "onViewDetail": {
          "type": "action",
          "description": "View detail action"
        }
      }
    },
    "article-viewer-modal": {
      "description": "Article viewer modal",
      "category": "custom",
      "properties": {
        "open": {
          "type": "boolean",
          "required": true,
          "description": "Open state"
        },
        "markdown": {
          "type": "string",
          "required": true,
          "description": "Markdown content"
        },
        "title": {
          "type": "string",
          "description": "Modal title"
        },
        "onClose": {
          "type": "action",
          "description": "Close action"
        }
      }
    },
    "create-task-modal": {
      "description": "Create task modal",
      "category": "custom",
      "properties": {
        "open": {
          "type": "boolean",
          "required": true,
          "description": "Open state"
        },
        "initialData": {
          "type": "object",
          "description": "Initial form data"
        },
        "isRegenerate": {
          "type": "boolean",
          "description": "Regenerate mode"
        },
        "onClose": {
          "type": "action",
          "description": "Close action"
        },
        "onSuccess": {
          "type": "action",
          "description": "Success action"
        }
      }
    },
    "reverse-submit-modal": {
      "description": "Reverse analysis submit modal",
      "category": "custom",
      "properties": {
        "open": {
          "type": "boolean",
          "required": true,
          "description": "Open state"
        },
        "onClose": {
          "type": "action",
          "description": "Close action"
        },
        "onSuccess": {
          "type": "action",
          "description": "Success action"
        }
      }
    },
    "markdown": {
      "description": "Markdown content renderer",
      "category": "custom",
      "properties": {
        "content": {
          "type": "string",
          "required": true,
          "description": "Markdown source content"
        }
      }
    }
  }
}
